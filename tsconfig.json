{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "allowJs": true,
    "outDir": "./build"
  },
  "exclude": ["node_modules", "public", ".cache"]
}
